<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/black</item>
    </style>
    <style name="Button.White" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@android:color/black</item>
    </style>

    <style name="HintTextStyle" parent="TextAppearance.Design.Hint">

        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>

    </style>
    <style name="TextColor" parent="Theme.AppCompat.DayNight">
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
    </style>
    <style name="text_input_layout_style">
        <item name="android:theme">@style/TextColor</item>
        <item name="barrierDirection">top</item>
        <item name="hintEnabled">true</item>

        <item name="hintTextColor">@color/black</item>
        <item name="expandedHintEnabled">true</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="boxBackgroundMode">none</item>
    </style>


    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>
    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ShapeAppearanceOverlay.MyApp.Button.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerFamilyTopRight">cut</item>
        <item name="cornerFamilyBottomRight">cut</item>
        <item name="cornerSizeTopLeft">32dp</item>
        <item name="cornerSizeBottomRight">32dp</item>
    </style>

    <style name="edit_text_auth_activity">
        <item name="android:theme">@style/TextColor</item>
        <item name="barrierDirection">top</item>
        <item name="hintAnimationEnabled">@string/email</item>
        <item name="hintEnabled">true</item>
        <item name="hintTextColor">@color/black</item>
        <item name="expandedHintEnabled">true</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="boxBackgroundMode">none</item>
    </style>
</resources>