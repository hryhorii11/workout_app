<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonReplace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_with_top_corners_rounded"
            android:drawableStart="@drawable/baseline_find_replace_24"
            android:drawablePadding="8dp"
            android:gravity="start|center"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:text="@string/replace"
            android:textColor="@drawable/black_text_selector"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonDelete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_with_bottom_corners_rounded"
            android:drawableStart="@drawable/baseline_delete_outline_24"
            android:drawablePadding="8dp"
            android:gravity="start|center"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:text="@string/delete"
            android:textColor="@drawable/red_text_selector"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/buttonReplace" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"

            android:background="@drawable/rounded_corners_background"
            android:drawableStart="@drawable/baseline_cancel_24"
            android:drawablePadding="8dp"
            android:gravity="start|center"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:text="@string/cancel"
            android:textColor="@drawable/black_text_selector"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/buttonDelete" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>